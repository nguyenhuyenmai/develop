<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <TextView
            android:id="@+id/item_id"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_marginStart="15dp"
            android:background="#F4C2C2"
            android:text="1"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/lbFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Full Name:"
            app:layout_constraintBottom_toTopOf="@+id/lbHireDate"
            app:layout_constraintStart_toEndOf="@+id/item_id"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbHireDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="HireDate:"
            app:layout_constraintBottom_toTopOf="@+id/lbSalary"
            app:layout_constraintStart_toEndOf="@+id/item_id"
            app:layout_constraintTop_toBottomOf="@+id/lbFullName" />

        <TextView
            android:id="@+id/lbSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Salary:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_id"
            app:layout_constraintTop_toBottomOf="@+id/lbHireDate" />

        <TextView
            android:id="@+id/item_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toEndOf="@+id/lbFullName"
            app:layout_constraintTop_toTopOf="@+id/lbFullName" />

        <TextView
            android:id="@+id/item_hireDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/lbHireDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.121"
            app:layout_constraintStart_toEndOf="@+id/lbHireDate" />

        <TextView
            android:id="@+id/item_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/lbSalary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toEndOf="@+id/lbSalary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>